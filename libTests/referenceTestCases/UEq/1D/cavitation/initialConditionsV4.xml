<CI>
    <!-- LIST OF GEOMETRICAL DOMAINS  -->
    <physicalDomains> 
        <domain name="base" state="right" type="entireDomain"/>
        <domain name="HP"  state="left" type="halfSpace">
            <dataHalfSpace axis="x" origin="0.5" direction="negative"/>
        </domain>
    </physicalDomains>

    <!-- LIST OF BOUNDARY CONDITIONS -->
    <boundaryConditions>
        <boundCond name="CLXm" type="nonReflecting" number="1"/>
        <boundCond name="CLXp" type="nonReflecting" number="2"/>
    </boundaryConditions>
    
    <!--  LIST OF STATES  -->
    <state name="left">
        <material type="fluid" EOS="IG_air.xml">
            <dataFluid alpha="0.01" density="10.0" pressure="1.e5"/>
        </material>
        <material type="fluid" EOS="SG_water.xml">
            <dataFluid alpha="0.99" density="1000.0" pressure="1.e5"/>
        </material>
        <mixture>
            <velocity x="-100." y="0." z="0."/>
        </mixture>
    </state>

    <state name="right">
        <material type="fluid" EOS="IG_air.xml">
            <dataFluid alpha="0.01" density="10.0" pressure="1.e5"/>
        </material>
        <material type="fluid" EOS="SG_water.xml">
            <dataFluid alpha="0.99" density="1000.0" pressure="1.e5"/>
        </material>
        <mixture>
            <velocity x="100." y="0." z="0."/>
        </mixture>
    </state>

</CI>
